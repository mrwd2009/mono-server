{
  "name": "simple-ui-ts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@dnd-kit/core": "^5.0.3",
    "@reduxjs/toolkit": "^1.8.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "antd": "^4.19.2",
    "axios": "^0.26.1",
    "axios-hooks": "^3.0.1",
    "classnames": "^2.3.1",
    "copy-to-clipboard": "^3.3.1",
    "d3-drag": "^3.0.0",
    "d3-hierarchy": "^3.1.1",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.1.0",
    "d3-transition": "^3.0.1",
    "d3-zoom": "^3.0.0",
    "echarts": "^5.3.1",
    "i18next": "^21.6.14",
    "lodash": "^4.17.21",
    "memoize-one": "^6.0.0",
    "rc-resize-observer": "^1.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.16.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.0",
    "react-window": "^1.8.6",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "PORT=4200 craco start",
    "build": "craco build && gzip -k -r build",
    "test": "craco test",
    "storybook": "start-storybook -p 5102 -s public",
    "build-storybook": "build-storybook -s public",
    "lint:style": "stylelint './**/*.less' --fix",
    "prettier": "prettier --write --ignore-unknown ./src",
    "pretty-quick": "pretty-quick --staged",
    "format": "npm run lint:style && npm run prettier",
    "build-zip": "npm run build && zip -r app-ui.zip build scripts server .dockerignore Dockerfile",
    "build-image:prod": "yarn build && docker build -t app-ui:${APP_VERSION:-1.0.0} . ",
    "image-cli:prod": "docker run -it --rm app-ui:${APP_VERSION:-1.0.0} sh",
    "run-container:prod": "docker run --name ${APP_CONAINER_NAME:-app-ui-container} --env-file .env -d  -p ${APP_PORT:-5200}:5200  app-ui:${APP_VERSION:-1.0.0}",
    "remove-container:prod": "docker rm -f ${APP_CONAINER_NAME:-app-ui-container}"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^6.4.3",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/node-logger": "^6.4.19",
    "@storybook/preset-create-react-app": "^4.0.1",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "^0.0.9",
    "@types/d3-drag": "^3.0.1",
    "@types/d3-hierarchy": "^3.0.2",
    "@types/d3-selection": "^3.0.2",
    "@types/d3-shape": "^3.0.2",
    "@types/d3-transition": "^3.0.1",
    "@types/d3-zoom": "^3.0.1",
    "@types/lodash": "^4.14.180",
    "@types/react-window": "^1.8.5",
    "dotenv": "^16.0.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "prettier": "^2.6.0",
    "pretty-quick": "^3.1.3",
    "stylelint": "^14.6.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-order": "^5.0.0",
    "webpack": "^5.70.0"
  },
  "resolutions": {
    "@types/react": "17.0.30"
  }
}
